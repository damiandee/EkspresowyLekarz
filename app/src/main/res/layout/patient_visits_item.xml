<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/visitNameLinerLayout">
            <TextView
                android:id="@+id/visitName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dip"
                android:textStyle="bold"
                android:orientation="horizontal"
                android:layout_marginLeft="10dip"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"/>

            <TextView
                android:id="@+id/visitDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dip"
                android:orientation="horizontal"
                android:layout_marginLeft="10dip"
                android:layout_toRightOf="@+id/visitName"
                android:layout_marginTop="5dp" />

            <TextView
                android:id="@+id/visitTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dip"
                android:orientation="horizontal"
                android:layout_marginLeft="10dip"
                android:layout_toRightOf="@+id/visitDate"
                android:layout_marginTop="5dp"
                android:layout_alignBottom="@+id/visitName" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/visitInfoLinearLayout"
            android:layout_below="@+id/visitNameLinerLayout"
            android:layout_marginBottom="5dp">

            <TextView
                android:id="@+id/visitDoctor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11dip"
                android:orientation="horizontal"
                android:layout_marginLeft="10dip"
                />

            <TextView
                android:id="@+id/visitDoctorAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11dip"
                android:orientation="horizontal"
                android:layout_marginLeft="10dip"
                />

            <TextView
                android:id="@+id/visitCost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11dip"
                android:orientation="horizontal"
                android:layout_marginLeft="10dip"
                />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/visitNote"
            android:layout_below="@+id/visitInfoLinearLayout"
            android:background="@drawable/rounded_border"
            android:padding="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/visitButton"
            android:layout_below="@+id/visitNote"
            android:background="@drawable/rounded_button_inactive"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"/>


    </RelativeLayout>
</LinearLayout>